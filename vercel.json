{
  "version": 2,
  "name": "contents-factory",
  "builds": [
    {
      "src": "src/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/js/(.*)",
      "dest": "/src/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/src/css/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/src/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/src/public/index.html" },
    { "source": "/upload", "destination": "/src/public/upload.html" },
    { "source": "/gallery", "destination": "/src/public/gallery.html" },
    { "source": "/job-detail", "destination": "/src/public/job-detail.html" }
  ]
}
